{
    "source":{
        "include" : ["."],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component"
    ],
    "opts":{
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs",
        "recurse": true,
        "verbose": true
    }
}